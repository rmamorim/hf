<h1>Listing areas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Superficie</th>
  </tr>

<% for area in @areas %>
  <tr>
    <td><%=h area.nome %></td>
    <td><%=h area.superficie %></td>
    <td><%= link_to 'Show', area %></td>
    <td><%= link_to 'Edit', edit_area_path(area) %></td>
    <td><%= link_to 'Destroy', area, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

