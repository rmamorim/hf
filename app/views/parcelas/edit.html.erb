  <p>
    <b>Número</b><br />
    <%= f.text_field :numero %>
  </p>

  <p>
    <b>Status</b><br />
    <%= f.text_field :cod_status %>
  </p>



  <p>
    <b>Valor original</b><br />
    <%= f.text_field :valor_original %>
  </p>

  <p>
    <b>Juros</b><br />
    <%= f.text_field :juros %>
  </p>

  <p>
    <b>Taxas</b><br />
    <%= f.text_field :taxas %>
  </p>

  <p>
    <b>Desconto</b><br />
